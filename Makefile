# R칟gle pour compiler printf

	@$(MAKE) -C $(PRINTF)

# R칟gle pour cr칠er l'ex칠cutable push_swap

	@$(CC) $(CFLAGS) $(CPPFLAGS) $(OBJ) -L$(PRINTF) -lftprintf -o $(NAME)

# R칟gles pour nettoyer les fichiers objets et l'ex칠cutable

clean:
	@echo "$(RED)Cleaning up..."
	@rm -f $(NAME)
	@echo "Done !"

fclean: clean

# R칟gle pour recompiler
re: fclean all

# Pour 칠viter les conflits avec des fichiers du m칡me nom
.PHONY: all clean fclean re