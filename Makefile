# D칠finitions de base

NAME = pipex
PRINTF = ./external/PRINTF
CC = cc
CFLAGS = -g -Wall -Wextra -Werror 
CPPFLAGS = -I./include
#=================================================__SRC__OF__PROJECT__=============================================================================
# SRC = $(wildcard ./src/*.c)
SRC = $(wildcard ./src/*.c) $(shell find ./src -type f -name '*.c')
#==================================================================================================================================================

# D칠finitions des fichiers sources et objets

OBJ = $(SRC)

# R칟gles des couleurs

GREEN = \033[0;32m
RED = \033[0;31m
NC = \033[0m
CYAN = \033[0;36m
YELLOW = \033[0;33m
MAGENTA = \033[0;35m
BLANC = \033[0;37m

all:	$(NAME)

